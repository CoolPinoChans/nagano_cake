<h1>ショッピングカート</h1>　<%= link_to "カートを空にする", destroy_all_path, method: :delete %>

<table>
    <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
    </tr>
    <tr>
        <% @cart_items.each do |cart_item| %>
            <%= form_with model: cart_item, url: root_path do |f| %>
                <td><%= cart_item.item.name %></td>
                <td><%= cart_item.item.with_tax_price %></td>
                <td><%= f.select :quantity, *[1..10] %><%= f.submit '変更' %></td>
                <td><%= cart_item.subtotal %></td>
                <%= @price_all += cart_item.item.with_tax_price * cart_item.quantity %>
            <% end %>
        <% end %>
    </tr>
</table>

<%= link_to "買い物を続ける", items_path %>
<%= link_to "情報入力画面に進む", new_order_path %>
