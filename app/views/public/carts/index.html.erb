<h1>ショッピングカート</h1>　<%= link_to "カートを空にする", current_customer.cart_items.destroy_all %>

<table>
    <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
    </tr>
    <tr>
        <%= form_with do |f| %>
            <% @cart_items.each do |cart_item| %>
                <td><%= cart_item.item.name %></td>
                <td><%= cart_item.item.with_tax_price %></td>
                <td><%= f.select :quantity, *[1..10] %><%= f.submit '変更' %></td>
                <td><%= cart_item.subtotal %></td>
                <%= @price_all += cart_item.item.with_tax_price * cart_item.quantity %>
        <% end %>
    </tr>
</table>

