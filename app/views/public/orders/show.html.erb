<div class="container">
 
  <div class="row mt-4">
    <div class="col-md-9">
      <h3>注文履歴詳細</h3>
    </div>  
  </div>
  
  <div class="row mt-4">
      <table class="table table-bordered mt-1 col-md-6">
        <tbody>
          <tr>
              <th class="table-light">
                  注文情報
              </th>
          </tr>
          <tr>
            <th class="table-secondary">注文日</th>
            <td><%= @order_history.created_at %></td>
          </tr>
          <tr>
            <th class="table-secondary">配送先</th>
            <td>
              〒<%= @order_history.post_code %>
                <%= @order_history.address %>
                <%= @order_history.name %>
            </td>
          </tr>
          <tr>
            <th class="table-secondary">支払方法</th>
            <td><%= @order_history_paiment_method_display %></td>
          </tr>
          <tr>
            <th class="table-secondary">ステータス</th>
            <td><%= @order_status %></td>
          </tr>
        </tbody>
      </table>
  
    　<table>
        <tbody class="table table-bordered mt-1 col-md-5">
          <tr>
              <th class="table-light">
                  請求情報
              </th>
          </tr>
        　<tr>
            <th class="table-secondary">商品合計</th>
            <td><%= @all_cart_price %></td>
        　</tr>
        　<tr>
            <th class="table-secondary">配送料</th>
            <td><%= @order_history.postage %></td>
        　</tr>
          <tr>
            <th class="table-secondary">ご請求額</th>
            <td><%= @order_history.billing_amount %></td>
        　</tr>
        </tbody>
    　</table>
　</div>
　
  <div class="row mt-4">
    注文内容
　</div>
　<div class="row">
    <table class="table table-bordered col-md-6 mb-4">
      <tr class="table-secondary">
        <th>
          商品
        </th>
        <th>
          単価(税込)
        </th>
        <th>
          個数
        </th>
        <th>
          小計
        </th>
      </tr>
      <% @order_history.order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.tax_in_price %></td>
        <td><%= order_detail.quantity %></td>
        <td><%= order_detail.subtotal_order %></td>
      </tr>
      <% end %>
    </table>
  </div>

</div>