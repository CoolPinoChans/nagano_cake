<div class="container">
  
  <div class="row">
    <h3>注文情報入力</h3>
  </div>
  
  <div class="row">
      <div class="mt-2 col-md-9">
           <h5>支払方法</h5>
      </div>
  </div>
  
  <%= form_with model: @order, url: confirm_path, method: :post do |f| %>
  <div class="row mt-2">
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
  </div>
  <div class="row">
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
  </div>
    
  <div class="row">
      <div class="mt-2 col-md-9">
           <h5>お届け先</h5>
      </div>
  </div>
  
  <div class="row mt-2">
      <%= f.radio_button :select_address, 0 %>
      <%= f.label :select_address, @select_addresses[0] %>
  </div>
  <div class="row">
      <%= current_customer.full_address %>
  </div>
  
  <div class="row mt-1">
      <%= f.radio_button :select_address, 1 %>
      <%= f.label :select_address, @select_addresses[1] %>
  </div>
  <div class="row">
      <%= f.select :delivery_id, options_from_collection_for_select(Delivery.all, :id, :address_all) %>
  </div>
  
  <div class="row mt-1">
      <%= f.radio_button :select_address, 2 %>
      <%= f.label :select_address, @select_addresses[2] %>
  </div>
  <div class="row">
      <div class="col-md-3">
        郵便番号(ハイフンなし)
      </div>
        <%= f.text_field :post_code %>
  </div>
  <div class="row">
      <div class="col-md-3">
          住所
      </div>
          <%= f.text_field :address %>
  </div>
  <div class="row">
      <div class="col-md-3">
          宛名
      </div>
      <%= f.text_field :name %>
  </div>
    
  <div class="row">
      <div class="col-md-12 mt-4 mb-4 text-center">
          <%= f.submit '確認画面へ進む', class: "btn btn-primary" %>
      </div>
  </div>
  <% end %>
</div>
