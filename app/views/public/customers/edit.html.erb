<div class="container">

　　<h3>会員情報編集</h3>

    <%= form_with model: @customer, url: customer_path, method: :patch do |f| %>
      <table>
           <tr>
            <th><%= f.label :氏名 %></th>
            <td><%= f.text_field :last_name %></td>
            <td><%= f.text_field :first_name %></td>
           </tr>

           <tr>
            <th><%= f.label :カナ %></th>
            <td><%= f.text_field :last_name_kana %></td>
            <td><%= f.text_field :first_name_kana %></td>
           </tr>

           <tr>
            <th><%= f.label :郵便番号 %></th>
            <td><%= f.text_field :post_code %></td>
           </tr>

           <tr>
            <th><%= f.label :住所 %></th>
            <td><%= f.text_field :address %></td>
           <tr>

           <tr>
            <th><%= f.label :電話番号 %></th>
            <td><%= f.text_field :phone_number %></td>
           </tr>

           <tr>
            <th><%= f.label :メールアドレス %></th>
            <td><%= f.text_field :email %></td>
           </tr>

      </table>
      <p class="text-center">
      <%= f.submit "編集内容を保存", class: "btn btn-success" %>
      </p>
    <% end %>

</div>

