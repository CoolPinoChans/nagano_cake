<h1>商品一覧画面</h1>

<% @items.each do |item| %>
<%= link_to item_path(item) do%>
  <% if item.image.attached? %>
    <%= image_tag item.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>
  <%= item.name %>
<% end %>
  <%= item.infomation %>
  <div class="aa">¥
    <%= item.price_no_tax %>
  </div>
<% end %>
<%= paginate @items %>
