<div class="container">

<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>


     <table class="table table-borderless row mx-pl-3">
      <tr>
       <th>名前　　　　　　姓</th>

        <td>
          <%= f.text_field :last_name, autofocus: true, class: "last_name" %>
        </td>

        <td>
          <%= f.label :名 %>
          <%= f.text_field :first_name, class: "first_name" %>
        </td>
      </tr>


      <tr>
       <th>フリガナ　　　　セイ</th>

        <td>
          <%= f.text_field :last_name_kana, class: "last_name_kana" %>
        </td>

        <td>
          <%= f.label :メイ %>
          <%= f.text_field :first_name_kana, class: "first_name_kana" %>
        </td>
      </tr>

          <tr>
            <th><%= f.label :郵便番号 %></th>
            <td><%= f.text_field :post_code %></td>
           </tr>

           <tr>
            <th><%= f.label :住所 %></th>
            <td><%= f.text_field :address %></td>
           <tr>

           <tr>
            <th><%= f.label :電話番号 %></th>
            <td><%= f.text_field :phone_number %></td>
           </tr>

           <tr>
            <th><%= f.label :メールアドレス %></th>
            <td><%= f.text_field :email %></td>
           </tr>

          <tr>
            <th><%= f.label :password, "パスワード(6文字以上)" %></th>
            <td>
              <%= f.password_field :password, autocomplete: "new-password" %>
            </td>
          </tr>

          <tr>
            <th><%= f.label :パスワード確認 %></th>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>

       </table>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>


<h5>既に登録済みの方</h5>
  <div class="log_in_link">
      <%= render "public/shared/links" %>からログインしてください。
  </div>

</div>
