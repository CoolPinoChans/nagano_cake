<h1>配送先登録/一覧</h1>




<table>
    <%= current_customer.deliveries.each do |delivery| %>
    <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
    </tr>
    <tr>
        <td><%= delivery.post_code %></td>
        <td><%= delivery.address %></td>
        <td><%= delivery.name %></td>
    </tr>
    <% end %>
</table>