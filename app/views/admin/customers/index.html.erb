<div class="container">
  <div class="row">
    <div class="com m-3">
      <h3>会員一覧</h3>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customer.each do |customer| %>
          <tr>
            <th><%= customer.id %></th>
            <th><%= link_to customer.full_name, admin_customer_path(customer) %></th>
            <th><%= customer.email %></th>
            <% if customer.is_deleted? == true %>
            <th class="text-denger text-center">退会</th>
            <% else %>
            <th class="text-success text-center">有効</th>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>