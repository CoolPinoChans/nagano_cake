<div class="container">
  <div class="row">
    <div class="col md-3">
      <h3 class="taxt-white"><%= @customer.full_name %>さんの会員詳細</h3>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>会員ID</th>
            <th><%= @customer.id %></th>
          </tr>
          <tr>
            <th>氏名</th>
            <th><%= @customer.full_name %></th>
          </tr>
          <tr>
            <th>フリガナ</th>
            <th><%= @customer.full_name_kana %></th>
          </tr>
          <tr>
            <th>郵便番号</th>
            <th>〒<%= @customer.post_code%></th>
          </tr>
          <tr>
            <th>住所</th>
            <th><%= @customer.address %></th>
          </tr>
          <tr>
            <th>電話番号</th>
            <th><%= @customer.phone_number %></th>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <th><%= @customer.email %></th>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <% if @customer.is_deleted? == true %>
            <th class="text-danger">退会</th>
            <% else %>
            <th class="text-success">有効</th>
            <% end %>
          </tr>
        </tbody>
      </table>
      <div class="text-center">
        <%= link_to "編集する",edit_admin_customer_path, class: "btn btn-success" %>
        <%= link_to "注文履歴一覧を見る",admin_customers_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>