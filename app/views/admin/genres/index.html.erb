<dev class="container">
  <div class="row">
    <div class="col m-3">
      <h3>ジャンル一覧・追加</h3>
      <div class="my-8">
        <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <tr>
          <td>ジャンル名</td>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>
        <% end %>
      </div>
      <table class="table table-borderless">
        <thead>
          <tr>
            <td>ジャンル</td>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</dev>