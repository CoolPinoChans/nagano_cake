<div class="container">
  <div class="row">
    <div class="col m-3">
      <h3>注文履歴一覧</h3>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>注文日時</th>
            <th>注文者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <tr>
          <% @orders.each do |order| %>
            <th>
              <%= link_to admin_order_path(order) do %>
              <%= order.created_at.strftime("%Y/%m/%d") %>
              <% end %>
            </th>
            <th><%= order.customer.full_name %></th>
            <th><%= order.order_details.sum(:quantity) %></th>
            <th><%= order.order_status %></th>
          </tr>
          <% end %>
          <th><%= paginate @orders %></th>
        </tbody>
      </table>
    </div>
  </div>
</div>