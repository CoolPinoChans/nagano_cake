<div class="container">
  <div class="row">
    <div class="col md-3">
      <h3>商品詳細</h3>
      <div class="col mt-5">
        <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "200x200" %>
        <% else %>
        <%= image_tag 'no_image', size: "200x200" %>
        <% end %>
      </div>
      <div class="col -5">
        <table class="table table-borderless">
          <tr>
            <th>商品名</th>
            <th><%= @item.name %></th>
          </tr>
          <tr>
            <th>商品説明</th>
            <th><%= @item.infomation %></th>
          </tr>
          <tr>
            <th>ジャンル</th>
            <!--<th><%#= @item.genre.name%></th>-->
          </tr>
          <tr>
            <th>税込価格(税抜価格)</th>
            <th>
              <%= @item.with_tax_price %>円
              (<%= @item.price_no_tax %>)円
            </th>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <th>
              <% if @item.is_active? == true %>
              <span>販売中</span>
              <% else %>
              <span>販売停止中</span>
              <% end %>
            </th>
          </tr>
          <div class="text-center">
            <%= link_to "編集する", edit_admin_item_path(@item), class: 'btn btn-success' %>
          </div>
        </table>
      </div>
    </div>
  </div>
</div>