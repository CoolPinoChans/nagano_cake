<div class="row">
  <div class="col m-3">
    <h2>商品新規登録</h2>
    <div class="mx-auto">
      <%= form_with model: @item, url: admin_items_path do |f| %>
      <table class="table table-borderless">
        <tr>
          <th><%= f.label :商品画像 %></th>
          <th><%= f.file_field :image,accept: "image/*" %></th>
        </tr>
        <tr>
          <th><%= f.label :商品名 %></th>
          <th><%= f.text_field :name %></th>
        </tr>
        <tr>
          <th><%= f.label :商品説明 %></th>
          <th><%= f.text_area :infomation %></th>
        </tr>
        <tr>
          <th><%= f.label :ジャンル %></th>
          <th><%= f.collection_select(:genre_id,@genres, :id, :name, {prompt: "選択"}) %></th>
        </tr>
        <tr>
          <th><%= f.label :税抜価格 %></th>
          <th><%= f.text_field :price_no_tax %>円</th>
        </tr>
        <tr>
          <th><%= f.label :販売ステータス%></th>
          <th>
          <%= f.radio_button :is_active, true %>
          <%= f.label :販売中 %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :販売停止中 %>
          </th>
        </tr>
      </table>
      <p class="text-center">
      <%= f.submit "新規登録", class: "btn btn-success" %>
      </p>
      <% end %>
    </div>
  </div>
</div>