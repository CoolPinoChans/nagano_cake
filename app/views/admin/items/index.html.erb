<div class="container">
  <div class="row">
    <div class="col m-3">
      <h3>商品一覧</h3>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th></th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <th><%= item.id %></th>
            <th><%= link_to item.name, admin_item_path(item) %></th>
            <th><%= item.price_no_tax %>円</th>
            <th><%= item.genre.name %></th>
            <th>
              <% if item.is_active? == true %>
              <span>販売中</span>
              <% else %>
              <span>販売停止中</span>
              <% end %>
            </th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>